@model FrankProject.Models.Post
@using FrankProject.Models

@{
    ViewData["Title"] = "Details";
}
@{

    var Comment = new Comment();
    var Rating = new Rating();
}



























<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Website Rating Page</title>
    <link href="https://fonts.googleapis.com/css?family=Lobster&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    <style>
        body {
            margin: 0;
            background-image: url("https://scontent-amt2-1.xx.fbcdn.net/v/t1.15752-0/p480x480/78925133_2425611691088513_6739306920152137728_n.png?_nc_cat=111&_nc_ohc=4ClYS5DjWAIAQkCT0cg9t2QkAUuaY88XRQ2D6iSCOLGd42DQRdrKHqD5Q&_nc_ht=scontent-amt2-1.xx&oh=d22e894bbb8d73bc9d3296b3f54b67da&oe=5E69036E");
        }



        .head {
            width: 100%;
            margin-top: 20px;
        }

        #contentheader {
            padding: 10px 16px;
            background: linear-gradient(130deg, rgba(0, 43, 101, 1) 0%, rgba(0, 104, 208, 1) 100%);
            color: white;
            display: block;
            display: flex;
        }

        #smoltitle {
            font-family: 'Lobster', cursive;
            color: white;
            text-align: center;
            font-size: 30px;
            font-weight: 200;
            text-decoration: none;
        }


          a:link{
            text-decoration: none!important;
        }

        .upper {
            height: 15%;
        }

        .post {
            background-color: #f1f1f1;
            width: 60%;
            height: auto;
            display: flex;
            margin: auto;
            margin-top: 50px;
            margin-bottom: 0px;
            padding-bottom: 80px;
            border: 3px solid black;
        }

        .kotelett_heading {
            margin: 0px 0px 0px 20px;
        }

        p {
            font-family: 'Lobster', cursive;
            font-size: 30px;
            display: inline-block;
        }


        label{
            font-family: 'Lobster', cursive;
            font-size: 30px;
            display: inline-block;
        }

        .viewWebsite {
            background: linear-gradient(130deg, rgba(0, 43, 101, 1) 0%, rgba(0, 104, 208, 1) 100%);
            color: white;
            width: 150px;
            height: 45px;
            float: right;
            margin: 0px 10px 0px 0px;
            font-family: 'Lobster', cursive;
            font-size: 24px;
            text-align: center;
            padding-top: 10px;
            padding-bottom: 0px;
            text-decoration: none;
        }

        .rateWebsite {
            background: linear-gradient(130deg, rgba(0, 43, 101, 1) 0%, rgba(0, 104, 208, 1) 100%);
            color: white;
            width: 150px;
            display: inline-block;
            height: 45px;
            float: right;
            margin: 10px 20px 0px 0px;
            font-family: 'Lobster', cursive;
            font-size: 24px;
            text-align: center;
            padding-top: 10px;
            text-decoration: none;
        }

        .addComment {
            background: linear-gradient(130deg, rgba(0, 43, 101, 1) 0%, rgba(0, 104, 208, 1) 100%);
            color: white;
            width: 150px;
            border: none;
            display: block;
            height: 50px;
            margin: 0 auto;
            font-family: 'Lobster', cursive;
            font-size: 24px;
            padding: 5px;
        }

        .line1 {
            border-top: 1px solid black;
            margin: 10px 0 0 0;
        }

        .line2 {
            border-top: 1px solid black;
            margin: 25px 0 0 0;
        }

        .line3 {
            border-top: 1px solid black;
            margin: 20px 0 0 0;
        }

        .img {
            width: 80%;
            margin: auto;
            height: auto;
            border: 3px solid #000000;
            display: flex;
            margin: auto;
        }

        .descr {
            font-family: 'Roboto', serif;
            font-size: 15px;
            width: 80%;
            text-align: center;
            margin: 5% 0 0 10%;
        }

        .rating {
            background-color: #f1f1f1;
            width: 60%;
            border: 2px solid black;
            height: auto;
            margin: 100px auto auto auto;
            padding-bottom: 50px;
        }

        .rate {
            margin: 13px 0px 0px 20px;
        }

        .top {
            width: 100%;
            height: auto;
        }

        .se1 {
            width: 100%;
            height: 30%;
        }

        #box2 a {
            text-decoration: none;
        }

        .s1,
        .s2,
        .s3 {
            flex: 1;
            padding: 30px 40px 30px 20px;
            display: block;
            width: 100%;
        }

        .ratingtext {
            font-size: 24px;
            font-family: 'Lobster', cursive;
            font-weight: 300;
            margin: 10px 0 5px 35px;
        }

            .ratingtext:first-child {
                margin-top: 0;
            }

        .fill {
            text-align: right;
            padding-right: 20px;
            line-height: 30px;
            color: white;
            border-radius: 5px;
            font-family: 'Roboto', serif;
        }

        .creativity {
            width: 71%;
            background-color: #FDB813;
        }

        .usability {
            width: 58%;
            background-color: #32A0DA;
        }

        .design {
            width: 84%;
            background-color: #F05125;
        }

        .bar {
            width: 82%;
            background-color: #ddd;
            border-radius: 5px;
            margin-left: 5%;
        }

        .creat_desc,
        .usab_desc,
        .design_desc {
            font-family: 'Roboto', serif;
            font-size: 15px;
            margin-left: 5%;
            margin-right: 12%;
        }

        .comment_section {
            background-color: #f1f1f1;
            width: 60%;
            border: 2px solid black;
            height: auto;
            margin: 100px auto 100px auto;
        }

        .commentText {
            font-family: 'Lobster', cursive;
            font-weight: 300;
            margin: 15px 0px 5px 25px;
            font-size: 30px;
        }

        .cmt {
            margin-top: 20px;
            display: flex;
            padding-bottom: 30px;
            margin-left: 30px;
            margin-right: 30px;
        }

        .flex1 img {
            width: 80%;
            display: block;
            margin: auto;
        }

        .flex2 p {
            font-family: 'Roboto', serif;
            font-size: 18px;
        }

        .flex1 {
            flex: 1;
        }

        .flex2 {
            flex: 5;
        }

      .commentHeading {
            font-size: 30px;
            margin-bottom: 0;
            margin-top: 0;
            font-family: 'Roboto', serif;
        }
        
        
        .add {
            margin-top: 20px;
            margin-bottom: 100px;
            padding-bottom: 50px;
            
        }
        
        
        .addc {
            
        }
        
        .addc input {
            
            display:block;
            width:80%;
            height:30px;
            margin-bottom:10px;
            margin-top:5px;
            border-radius:5px;
            margin-left: 30px;
            background-color:white;
            border: thin black solid;
            padding-left:5px;
        }
        
        .addc textarea {
            display:block;
            width:80%;
            
            margin-bottom:10px;
            margin-top:px;
            border-radius:5px;
            margin-left: 30px;
            background-color:white;
            border: thin black solid;
            padding-left:5px;
        }
        
        .commentadding {
             font-family: 'Lobster', cursive;
            font-weight: 300;
            margin: 15px 0px 5px 25px;
            font-size: 30px;
            
        }
        
        .add hr {
            margin-bottom: 30px;
            border: 1px black solid;
        }
        
        .addc p {
            margin-left: 30px;
            margin-bottom: 10px;
            margin-top: 10px;
        }
         .addc label {
            margin-left: 30px;
            margin-bottom: 10px;
            margin-top: 10px;
        }


    </style>
</head>

<body>



    <main>
        <div class="post">
            <div class="head">
                <div class="upper">
                    <p class="kotelett_heading">    @Html.DisplayFor(model => model.Heading)</p>
                    <a href="  @Html.DisplayFor(model => model.Url)" class="viewWebsite" target="_blank">View Website</a>
                    <br><br>
                    <hr class="line1">
                </div>
                <img class="img" src="http://via.placeholder.com/640x360" alt="">
                <p class="descr">
                    @Html.DisplayFor(model => model.Description)
                </p>
            </div>
        </div>


        <div class="rating">
            <div class="top">
                <div class="upper">
                    <p class="rate">Rating</p>

                    <a asp-controller="Posts" class="rateWebsite" asp-action="RateIt" asp-route-id="@Model.PostId">Rate Website</a>
                    <br /><br /><br /><br />
                    <hr class="line2" style="margin-top:20px;">
                </div>
            </div>


            <div class="main">
                <div class="se1">
                    <div class="s1">
                        <p class="ratingtext">Creativity</p>
                        <div class="bar">
                            <div class="fill creativity">
                                @ViewBag.avg2
                            </div>
                        </div>
                        <p class="creat_desc">
                            Creativity is based on how innovative, odd and playful the creator have been.
                            How each decistion has been rethinked and twisted to a design that plays together with the content.
                        </p>
                    </div>


                    <div class="s2">
                        <p class="ratingtext">Usability</p>
                        <div class="bar">
                            <div class="fill usability">
                                @ViewBag.avg3
                            </div>
                        </div>
                        <p class="usab_desc">
                            Usability is based on how well the website works.
                            Can you get from a to b, not with how much ease from a to b. Did the website work as it should? or is it literally unusable?
                        </p>
                    </div>


                    <div class="s3">
                        <p class="ratingtext">Design</p>
                        <div class="bar">
                            <div class="fill design">
                                @ViewBag.avg
                            </div>
                        </div>
                        <p class="design_desc">
                            Design is based on how much work the creator put into the details. How much thought they put into every decition they had to make.
                            And how well it plays together, ending with a well crafted theme.
                        </p>
                    </div>
                </div>
            </div>
        </div>


    </main>
    <div class="comment_section">








        <section class="cmt">
            <div class="flex1">
                <img src="data:image/jpeg;base64," alt="">
            </div>
            <div class="flex2">
                <h5 class="commentHeading">This is a heading</h5>
                <p>I really think this is a innovative style of website / Resume. Im very impressed. The guy is kinda like a wiz.</p>
            </div>



        </section>









    </div>





    <section class="add comment_section">
        <h4 class="commentadding">Add comment</h4>
        <hr>
        <form asp-controller="Comments" asp-action="Create" class="addc">


            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PostId" />
            @await Html.PartialAsync("_m", Comment)

        </form>

    </section>
    @await Html.PartialAsync("_avg", Comment)



</body>
</html>